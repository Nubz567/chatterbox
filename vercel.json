{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60 
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/socket.io/", "dest": "/server.js" },
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/login", "dest": "/server.js" },
    { "src": "/register", "dest": "/server.js" },
    { "src": "/logout", "dest": "/server.js" },
    { "src": "/change-password", "dest": "/server.js" },
    { "src": "/delete-account", "dest": "/server.js" },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 