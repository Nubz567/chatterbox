{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/server.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/socket.io/(.*)", "destination": "/api/server.js" },
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/api/server.js" }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
} 